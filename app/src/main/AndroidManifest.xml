<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission
        android:name="android.permission.BIND_ACCESSIBILITY_SERVICE"
        tools:ignore="ProtectedPermissions" />
    <uses-permission
        android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
        tools:ignore="ProtectedPermissions" />

    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />
        </intent>
    </queries>

    <uses-feature
        android:name="android.software.device_admin"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true">

        <receiver
            android:name=".Services.RestartService"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".Services.AdminReceiver"
            android:exported="false"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin" />
        </receiver>

        <service
            android:name=".Services.BackgroundService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="To run service in the background." />
        </service>
        <service
            android:name=".Services.NotificationService"
            android:exported="false"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>
        <service
            android:name=".Services.LogURLService"
            android:exported="true"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service" />
        </service>

        <activity
            android:name=".Activities.BlockDataActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix.BlockData" />
        <activity
            android:name=".Activities.EditScheduleActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.NoOfLaunchesActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.FixedBlockActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.QuickBlockActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.SpecificTimeActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.UsageTimeActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.EditProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.NewScheduleActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.DrawOnTopScreenActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.AppSelectActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.StrictModeActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.TakeBreakActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.NewProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.KeywordBlockActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.AppBlockActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.SettingActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.InternetBlockActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.EnterPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.NewPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.AboutActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.WebBlockActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.DrawOnTopLaunchActivity"
            android:exported="false"
            android:noHistory="true"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Permissions.GetNotificationAccess"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Permissions.GetDrawOverAppsPermission"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Permissions.GetUsageStatsPermissionActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.UsageOverviewActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
        <activity
            android:name=".Activities.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.Achievix">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.AppInsightsActivity"
            android:exported="false"
            android:theme="@style/Theme.Achievix" />
    </application>
</manifest>